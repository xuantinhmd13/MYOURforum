<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor" tools:ignore="NewApi">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>
    <style name="PopupStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">#fff</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>